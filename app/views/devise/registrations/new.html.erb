<div class="container">
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>Sign up</h2>
  <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
      <h4 class="card-title mt-3 text-center">Create Account</h4>
      <p class="text-center">Get started with your free account</p>
      <p>
        <%= link_to omniauth_authorize_path(resource_name, 'facebook'), class: "btn btn-block btn-facebook" do %>
        <i class="fab fa-facebook-f"></i> Â  Sign up via facebook
        <% end %>
      </p>
      <p class="divider-text">
        <span class="bg-light">OR</span>
      </p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group input-group">
         <div>5-15 alphanumeric characters besides surrounding blank spaces</div>
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          <%= f.text_field :account_id, class: "form-control", placeholder: "Account ID", type: "text" %>
        </div> <!-- form-account_id// -->

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
          </div>
          <%= f.text_field :email, class: "form-control", placeholder: "Email address", type: "email" %>
        </div> <!-- form-email// -->

        <div class="form-group input-group">
          <div>1-20 alphanumeric characters besides surrounding blank spaces</div>
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          <%= f.text_field :name, class: "form-control", placeholder: "Full name", type: "text" %>
        </div> <!-- form-name// -->

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          </div>
          <%= f.password_field :password, class: "form-control", placeholder: "Create password", type: "password"%>
        </div> <!-- form-password// -->

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          </div>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat password", type: "password"%>
        </div> <!-- form-password// -->

        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block"> Create Account </button>
        </div> <!-- form-submit// -->
      <% end %>
      <p class="text-center">Have an account? <%= link_to "Log in", new_session_path(resource_name) %><br /> </p>
    </article>
  </div> <!-- card.// -->
</div>
<!--container end.//-->
