<div class="container">
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>Log in</h2>

  <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
      <h4 class="card-title mt-3 text-center">Log In Now</h4>
      <p>
        <%= link_to omniauth_authorize_path(resource_name, 'facebook'), class: "btn btn-block btn-facebook" do %>
        <i class="fab fa-facebook-f"></i> Â  Sign in via facebook
        <% end %>
      </p>
      <p class="divider-text">
        <span class="bg-light">OR</span>
      </p>

      <div class="form-group">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <%= f.text_field :email, class: "form-control", placeholder: "Email address", type: "email" %>
          </div> <!-- form-group// -->

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password, class: "form-control", placeholder: "Your password", type: "password"%>
          </div> <!-- form-group// -->

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Log In", type: "submit", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div> <!-- form-group// -->
      <p class="text-center">Start an account? <%= link_to "Sign up", new_registration_path(resource_name) %><br /> </p>
    </article>
  </div> <!-- card.// -->
</div>
<!--container end.//-->
