<h1><%= @user.name + " (" + @user.account_id + ")" %><%= render partial: 'users/follow_form', locals: {user: @user}%></h1>
<h2>Profile</h2>
<div>
    <% unless @user.is_male.nil? %>
        <%= @user.is_male ? '男' : '女' %>
    <% end %>
</div>
<div><%= @user.weight %></div>
<div><%= @user.height %></div>
<div><%= @user.comment %></div>

<%= link_to "Followings", followings_user_path(@user) %>
<%= link_to "Followers", followers_user_path(@user) %>

<h2>Meal_Posts</h2>
<%= render template: 'meal_posts/index', locals: {meal_posts: @meal_posts} %>
