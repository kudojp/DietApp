<h2>Edit profile</h2>

<%# methodはputとpostかどっちでもいける %>
<%= form_for(@user, url: profile_path, html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :sex %><br />
    <label><%= f.radio_button :is_male, true %> 男 </label>
    <label><%= f.radio_button :is_male, false %> 女</label>
  </div>

  <div class="field">
    <%= f.label :height %><br />
    <%= f.number_field :height, step: 0.1, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :weight %><br />
    <%= f.number_field :weight, step: 0.1, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
